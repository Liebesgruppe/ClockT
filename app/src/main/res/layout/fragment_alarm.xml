<?xml version="1.0" encoding="utf-8"?>
<com.glazbeni.org.clockt.Layout.AlarmTextView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ListView
        android:id="@+id/lv_alarm"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@color/colorLvDivide"
        android:dividerHeight="0.25dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add"
        android:id="@+id/btn_add"
        android:layout_gravity="bottom|center"
        android:layout_margin="24dp"
        android:background="@drawable/button"
        android:textColor="@color/colorLv"/>

</com.glazbeni.org.clockt.Layout.AlarmTextView>